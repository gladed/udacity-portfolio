<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".LauncherActivity">

    <TextView
        android:text="@string/myNanodegreeApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/textView"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capstone: My Own App"
            android:id="@+id/buttonCapstone"
            android:layout_below="@+id/buttonXyzReader"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/accent"
            android:onClick="onLaunch"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spotify Streamer"
            android:id="@+id/buttonSpotify"
            android:layout_alignStart="@id/buttonCapstone"
            android:layout_alignEnd="@id/buttonCapstone"
            android:backgroundTint="@color/primary"
            android:onClick="onLaunch"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scores App"
            android:id="@+id/buttonScoresApp"
            android:layout_below="@+id/buttonSpotify"
            android:layout_alignStart="@id/buttonCapstone"
            android:layout_alignEnd="@id/buttonCapstone"
            android:backgroundTint="@color/primary"
            android:onClick="onLaunch"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/buttonLibraryApp"
            android:layout_below="@+id/buttonScoresApp"
            android:layout_alignStart="@id/buttonCapstone"
            android:layout_alignEnd="@id/buttonCapstone"
            android:backgroundTint="@color/primary"
            android:onClick="onLaunch"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build It Bigger"
            android:id="@+id/buttonBuildItBigger"
            android:layout_below="@+id/buttonLibraryApp"
            android:layout_alignStart="@id/buttonCapstone"
            android:layout_alignEnd="@id/buttonCapstone"
            android:backgroundTint="@color/primary"
            android:onClick="onLaunch"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XYZ Reader"
            android:id="@+id/buttonXyzReader"
            android:layout_below="@+id/buttonBuildItBigger"
            android:layout_alignStart="@id/buttonCapstone"
            android:layout_alignEnd="@id/buttonCapstone"
            android:backgroundTint="@color/primary"
            android:onClick="onLaunch"
            />

    </RelativeLayout>

</LinearLayout>
